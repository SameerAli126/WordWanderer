# WordWanderer Environment Variables
# Copy this file to .env.local and fill in your values

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/wordwanderer

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secure-jwt-secret-here

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# ngrok Configuration (Optional)
# Get a static domain from: https://dashboard.ngrok.com/cloud-edge/domains
# NGROK_DOMAIN=your-static-domain.ngrok.io

# Node Environment
NODE_ENV=development

# Server Port
PORT=5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
